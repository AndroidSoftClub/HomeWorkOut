<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ll_color"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbaraStartID"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:title="Start Our Exercise"
        android:background="@color/ll_color"
        app:titleTextColor="@color/view_color"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/view_color"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/ll_color">

            <ImageView
                android:id="@+id/sound_ivID"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:src="@drawable/sound_1"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:padding="2dp"/>

            <ImageView
                android:id="@+id/startIMGID"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/day2e1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/view_color"/>

            <TextView
                android:id="@+id/textStartID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exercise Name"
                android:textColor="@color/view_color"
                android:fontFamily="monospace"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/view_color"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/view_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ll_color">
    <ProgressBar
        android:id="@+id/progress_bar_2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:indeterminate="false"
        android:maxHeight="10dp"
        android:layout_margin="5dp"
        android:scaleX="-1"
        android:progress="0"
        android:visibility="visible"
        android:progressDrawable="@drawable/btn_attrective_startour"
        android:minHeight="10dp" />

    <TextView
        android:id="@+id/redyTVID"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="20"
        android:textSize="25sp"
        android:textColor="@color/view_color"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_margin="5dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/view_color"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/ll_color"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backImgID"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/back_button"
            android:adjustViewBounds="true"
            android:layout_marginRight="10dp"
            android:background="?selectableItemBackground"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/ivplayID"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/play"
            android:background="?selectableItemBackground"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/nextBTNID"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/right_button"
            android:background="?selectableItemBackground"
            android:adjustViewBounds="true"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"/>


    </LinearLayout>

</LinearLayout>