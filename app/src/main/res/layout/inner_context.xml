<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:background="?selectableItemBackground"
    app:cardBackgroundColor="@color/ll_color"
    android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/ll_color"
            android:layout_gravity="center"
            android:gravity="center">


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/ll_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/exerNamID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Exercise Name"
                    android:textSize="20dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/view_color"
                    android:layout_gravity="start|center_horizontal"
                    android:gravity="start|center_horizontal"/>


                <TextView
                    android:id="@+id/tv_timerID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="12s"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/view_color"
                    android:layout_gravity="start|center_horizontal"
                    android:gravity="start|center_horizontal"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/innerIVID"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:transitionName="example_transition"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/day2e7"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
