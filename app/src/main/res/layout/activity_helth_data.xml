<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ll_color"
    tools:context="com.example.Activity.HelthDataActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_helth_id"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:titleTextColor="@color/view_color"
        app:title="Health Data"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/view_color"/>

    <LinearLayout
        android:id="@+id/ll_helth_genderID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="?selectableItemBackground">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="22sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/view_color"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/gender_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textColor="@color/view_color"
        android:fontFamily="sans-serif"
        android:layout_marginLeft="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_helth_dobID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="?selectableItemBackground">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:layout_marginLeft="10dp"
            android:textSize="22sp"
            android:textColor="@color/view_color"
            android:fontFamily="sans-serif"/>

        <TextView
            android:id="@+id/dob_tvID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1994-04-01"
            android:textColor="@color/view_color"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif"/>


    </LinearLayout>


</LinearLayout>
